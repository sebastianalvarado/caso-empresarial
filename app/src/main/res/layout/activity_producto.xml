<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_form_margin"
    android:paddingRight="@dimen/activity_horizontal_form_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.inacap.unidad1.activity.ProductoActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_nombre_producto"
        android:layout_marginTop="35dp"
        android:hint="@string/nombre"
        android:textSize="@dimen/textSizeForm"
        android:maxLines="2"
        android:layout_below="@+id/ll_idproducto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_precio_producto"
        android:hint="Precio"
        android:textSize="@dimen/textSizeForm"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/txt_nombre_producto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txt_nombre_producto"
        android:layout_alignEnd="@+id/txt_nombre_producto"
        android:inputType="number"
        android:maxLines="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_gestionar_producto"
        android:layout_below="@+id/txt_precio_producto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="52dp"
        android:textSize="30dp"
        android:layout_toStartOf="@+id/btn_eliminar_producto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/btn_eliminar_producto"
        android:layout_alignTop="@+id/btn_gestionar_producto"
        android:layout_alignRight="@+id/txt_precio_producto"
        android:layout_alignEnd="@+id/txt_precio_producto"
        android:textSize="30dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/ll_idproducto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txt_nombre_producto"
        android:layout_alignEnd="@+id/txt_nombre_producto">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ID"
            android:textIsSelectable="false"
            android:textSize="40dp"
            android:layout_weight="0.17" />

        <TextView
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txv_idproducto"
            android:textIsSelectable="false"
            android:textSize="40dp"
            android:layout_marginBottom="0dp" />
    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activo"
        android:id="@+id/cb_estado_producto"
        android:textSize="@dimen/textSizeForm"
        android:checked="true"
        android:clickable="false"
        android:contextClickable="false"
        android:layout_below="@+id/txt_precio_producto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
