<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.inacap.unidad1.activity.PedidoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txt_producto"
        android:layout_marginTop="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txt_fecha_pedido"
        android:hint="Fecha"
        android:layout_below="@+id/ll_idpedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:id="@+id/btn_cliente_pedido"
        android:layout_below="@+id/txt_fecha_pedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txv_cliente_pedido"
        android:layout_below="@+id/txt_fecha_pedido"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btn_cliente_pedido"
        android:layout_toRightOf="@+id/btn_cliente_pedido"
        android:layout_toEndOf="@+id/btn_cliente_pedido"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producto"
        android:id="@+id/btn_producto_pedido"
        android:layout_below="@+id/btn_cliente_pedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txv_producto_pedido"
        android:textSize="15dp"
        android:layout_alignRight="@+id/txt_producto"
        android:layout_alignEnd="@+id/txt_producto"
        android:layout_toEndOf="@+id/cb_estado_pedido"
        android:layout_above="@+id/txt_cantidad_pedido"
        android:layout_alignTop="@+id/btn_producto_pedido"
        android:layout_toRightOf="@+id/cb_estado_pedido" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txv_precio_pedido"
        android:layout_below="@+id/txt_cantidad_pedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entregado"
        android:id="@+id/cb_estado_pedido"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/txv_precio_pedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_cantidad_pedido"
        android:layout_below="@+id/btn_producto_pedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Cantidad"
        android:numeric="integer"
        android:enabled="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/ll_idpedido"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txt_producto"
        android:layout_alignEnd="@+id/txt_producto">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ID"
            android:textIsSelectable="false"
            android:textSize="40dp"
            android:layout_weight="0.17" />

        <TextView
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txv_idpedido"
            android:textIsSelectable="false"
            android:textSize="40dp"
            android:layout_marginBottom="0dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_gestionar_pedido"
        android:layout_below="@+id/cb_estado_pedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/btn_eliminar_pedido"
        android:layout_alignTop="@+id/btn_gestionar_pedido"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
