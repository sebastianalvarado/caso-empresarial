<?xml version="1.0" encoding="utf-8"?>
<!-- Genera un bot贸n con tonalidades verde. Este es creado especialmente para seleccionar los item
 del pedido
El primer item refiere a la accion de presionar el bot贸n, que entrega un color plano
El segundo item refiere a la acci贸n de bot贸n sin accionar, que entrega un degrade-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#45ff4e" />
            <stroke
                android:width="1dp"
                android:color="#2f992f" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#2f992f"
                android:endColor="#58cf5e"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f992f" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>